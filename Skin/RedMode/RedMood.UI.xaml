<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <ResourceDictionary.MergedDictionaries>
        <ResourceDictionary Source="/Nova.SmartLCT.Skin;component/BlueMode/BlueMood.Color.xaml"/>
    </ResourceDictionary.MergedDictionaries>

    <Style TargetType="{x:Type Window}">
        <Setter Property="Foreground" Value="{DynamicResource WindowBackgrounColor}"/>
        <Setter Property="Background" Value="Blue"/>
        
    </Style>

    <Style TargetType="{x:Type Button}">
        <Setter Property="Foreground" Value="{DynamicResource WindowBackgrounColor}"></Setter>
    </Style>

    <Style TargetType="{x:Type TextBox}">
        <Setter Property="Foreground" Value="Blue"></Setter>
    </Style>
</ResourceDictionary>